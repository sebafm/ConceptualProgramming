   "source": [
    "def collatz(n):\n",
    "    lst = list()\n",
    "    while n != 1:\n",
    "        lst.append(n)\n",
    "        if n % 2 == 0:\n",
    "            n = n // 2\n",
    "        else:\n",
    "            n = 3*n + 1\n",
    "    return lst"
   ]
